{
  "name": "historical-portfolio-game",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "supabase/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @game/web dev",
    "dev:mobile": "pnpm --filter @game/mobile start",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format"
  },
  "devDependencies": {
    "turbo": "^2.1.0"
  },
  "dependencies": {
    "@shopify/react-native-skia": "^2.2.4",
    "@supabase/supabase-js": "^2.56.0",
    "expo-haptics": "^14.1.4",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "^4.0.2",
    "victory-native": "^41.19.3",
    "zod": "^4.1.1"
  }
}
